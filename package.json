{
  "name": "4tracker-core",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "tsnd --transpile-only --respawn --ignore-watch node_modules src/server.ts",
    "start": "npm i && npm run build && node build/server.js",
    "build": "rimraf build && tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 src/**/*.js build/",
    "test": "jest -c ./jest.config.js",
    "test:coverage": "jest --coverage -c ./jest.config.js",
    "formatter": "npx prettier --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-winston": "^4.2.0",
    "ioredis": "^5.2.3",
    "jest": "^29.1.2",
    "jest-mock-extended": "^3.0.1",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.6.5",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.3",
    "@types/supertest": "^2.0.12",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
